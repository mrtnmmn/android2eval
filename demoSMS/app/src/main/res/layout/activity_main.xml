<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lbTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Número de Teléfono:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTelefono"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lbTelefono"
        android:layout_toEndOf="@+id/lbTelefono"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar SMS"
        android:onClick="EnviarSMS"
        android:id="@+id/btnEnviarSMS"
        android:layout_below="@+id/txtTelefono"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aquí saldran los SMS Recibidos"
        android:id="@+id/txtRecibirSMS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEnviarSMS"
        android:layout_alignRight="@+id/txtTelefono"
        android:layout_alignEnd="@+id/txtTelefono" />

</RelativeLayout>